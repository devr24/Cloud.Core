<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <IsPackable>true</IsPackable>
    <PackageId>Cloud.Core</PackageId>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageTags>Cloud.Core .net-Core Core interface Cloud.Core common</PackageTags>
    <PackageReleaseNotes />
    <Description>Cross package functionality for all Cloud Core .net Core packages. Contains the main interface contracts used as a top level API for other packages, this allows us to easily build cross-package functionality without creating a massive dependency chain.</Description>
    <Authors>Robert McCabe</Authors>
    <Copyright>Aylesbury Solutions Ltd</Copyright>
    <Company>Aylesbury Solutions Ltd</Company>
    <Version>5.0</Version>
    <PackageIconUrl>https://cloud1core.blob.core.windows.net/icons/CC.png</PackageIconUrl>
    <LangVersion>7.3</LangVersion>
    <ProjectGuid>{49353CB1-6857-4E9E-B65C-A9A894025902}</ProjectGuid>
    <RepositoryUrl>https://github.com/rmccabe24/Cloud.Core</RepositoryUrl>
    <RepositoryType>Private</RepositoryType>
    <DocumentationFile>Cloud.Core.xml</DocumentationFile>
    <PackageReleaseNotes>
	    Full API Documentation can be found here:
	    https://cloud1core.blob.core.windows.net/docs/Cloud.Core/api/index.html
    </PackageReleaseNotes>
    <PackageProjectUrl>https://dev.azure.com/cloudcoreproject/CloudCore/</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

	<ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
    <PackageReference Include="Polly" Version="7.2.2" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="5.0.0" />
  </ItemGroup>
	
</Project>
